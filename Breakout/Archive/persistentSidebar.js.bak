// js/persistentSidebar.js - With debugging
export class PersistentSidebar {
    constructor() {
        console.log('ğŸ”§ PersistentSidebar constructor called');
        this.isOpen = false;
        this.currentTab = 'filters';
        this.init();
    }

    init() {
        console.log('ğŸ”§ PersistentSidebar init() called');
        this.createSidebar();
        this.setupEventListeners();
        this.setupTabs();
        console.log('âœ… PersistentSidebar initialization complete');
    }

    createSidebar() {
        console.log('ğŸ”§ Creating sidebar...');
        
        // Remove any existing sidebar first
        const existing = document.getElementById('persistentSidebar');
        if (existing) {
            console.log('ğŸ—‘ï¸ Removing existing sidebar');
            existing.remove();
        }

        const sidebarHTML = `
            <div id="persistentSidebar" class="persistent-sidebar">
                <div class="sidebar-toggle">
                    <button id="sidebarToggle" title="Toggle Sidebar">â–¶</button>
                </div>
                <div class="sidebar-content">
                    <div class="sidebar-header">
                        <h3>Spectrum Manager</h3>
                    </div>
                    <div class="tab-navigation">
                        <button class="tab-btn active" data-tab="filters">ğŸ” Filters</button>
                        <button class="tab-btn" data-tab="overview">ğŸ“Š Overview</button>
                        <button class="tab-btn" data-tab="settings">âš™ï¸ Settings</button>
                    </div>
                    <div class="tab-content">
                        <div id="tab-filters" class="tab-panel active">
                            <div class="form-section">
                                <h4>ğŸ” SFAF Filters</h4>
                                <div class="form-row">
                                    <label>ğŸ“ Location:</label>
                                    <input type="text" id="filterLocation" class="form-control" placeholder="State, Location">
                                </div>
                                <div class="form-row">
                                    <label>ğŸ“¡ Frequency:</label>
                                    <input type="text" id="filterFrequency" class="form-control" placeholder="4460, K4460">
                                </div>
                                <div class="filter-actions">
                                    <button id="applyFilters" class="action-btn">Apply Filters</button>
                                    <button id="clearFilters" class="action-btn secondary">Clear All</button>
                                </div>
                            </div>
                        </div>
                        <div id="tab-overview" class="tab-panel">
                            <div class="form-section">
                                <h4>ğŸ“Š Map Statistics</h4>
                                <p>Total markers: <span id="totalMarkers">0</span></p>
                            </div>
                        </div>
                        <div id="tab-settings" class="tab-panel">
                            <div class="form-section">
                                <h4>âš™ï¸ Settings</h4>
                                <div class="form-row">
                                    <label>
                                        <input type="checkbox" id="showTooltips" checked>
                                        Show marker tooltips
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        document.body.insertAdjacentHTML('beforeend', sidebarHTML);
        
        // Verify it was created
        const sidebar = document.getElementById('persistentSidebar');
        const toggleBtn = document.getElementById('sidebarToggle');
        
        console.log('âœ… Sidebar created:', !!sidebar);
        console.log('âœ… Toggle button created:', !!toggleBtn);
        
        if (sidebar) {
            console.log('ğŸ“ Sidebar position:', getComputedStyle(sidebar).right);
            console.log('ğŸ¨ Sidebar z-index:', getComputedStyle(sidebar).zIndex);
        }
    }

    setupEventListeners() {
        console.log('ğŸ”§ Setting up event listeners...');
        const toggleBtn = document.getElementById('sidebarToggle');
        if (toggleBtn) {
            toggleBtn.addEventListener('click', () => {
                console.log('ğŸ–±ï¸ Toggle button clicked');
                this.toggle();
            });
            console.log('âœ… Toggle button listener added');
        } else {
            console.error('âŒ Toggle button not found for event listener');
        }
    }

    setupTabs() {
        console.log('ğŸ”§ Setting up tabs...');
        const tabBtns = document.querySelectorAll('.tab-btn');
        console.log(`ğŸ“‹ Found ${tabBtns.length} tab buttons`);
        
        tabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const tabId = btn.dataset.tab;
                console.log(`ğŸ–±ï¸ Tab clicked: ${tabId}`);
                this.switchTab(tabId);
            });
        });
    }

    toggle() {
        console.log(`ğŸ”„ Toggling sidebar. Currently open: ${this.isOpen}`);
        if (this.isOpen) {
            this.close();
        } else {
            this.open();
        }
    }

    open() {
        console.log('ğŸ“‚ Opening sidebar...');
        const sidebar = document.getElementById('persistentSidebar');
        const toggleBtn = document.getElementById('sidebarToggle');
        
        if (sidebar && toggleBtn) {
            sidebar.classList.add('open');
            toggleBtn.innerHTML = 'â—€';
            this.isOpen = true;
            console.log('âœ… Sidebar opened');
            console.log('ğŸ“ New position:', getComputedStyle(sidebar).right);
        } else {
            console.error('âŒ Could not open sidebar - elements not found');
        }
    }

    close() {
        console.log('ğŸ“ Closing sidebar...');
        const sidebar = document.getElementById('persistentSidebar');
        const toggleBtn = document.getElementById('sidebarToggle');
        
        if (sidebar && toggleBtn) {
            sidebar.classList.remove('open');
            toggleBtn.innerHTML = 'â–¶';
            this.isOpen = false;
            console.log('âœ… Sidebar closed');
        } else {
            console.error('âŒ Could not close sidebar - elements not found');
        }
    }

    switchTab(tabId) {
        console.log(`ğŸ”„ Switching to tab: ${tabId}`);
        
        // Update buttons
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        document.querySelector(`[data-tab="${tabId}"]`).classList.add('active');

        // Update panels
        document.querySelectorAll('.tab-panel').forEach(panel => {
            panel.classList.remove('active');
        });
        document.getElementById(`tab-${tabId}`).classList.add('active');

        this.currentTab = tabId;
        console.log('âœ… Tab switched successfully');
    }
}

export const persistentSidebar = new PersistentSidebar();
console.log('ğŸ“¤ PersistentSidebar exported');